<div{{ attributes }}>
    <!-- component html -->

        {% for episode in this.LastEpisodes %}

            <div class="card">

                <div class="card-body">
                    <h5 class="card-title">{{ episode.title }}</h5>
                    <p class="card-text">{{ episode.season.program.title }}<br>
                    Episode {{ episode.number }}, season {{ episode.season.number }}</p>
                    <a href="{{ path('program_episode_show', { programSlug: episode.season.program.slug, seasonId: episode.season.id, episodeSlug: episode.slug }) }}" class="btn btn-primary">View Episode</a>
                </div>
            </div>

        {% endfor %}

</div>

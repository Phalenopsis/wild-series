{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table program : </h1>
    {% for program in programs %}
        <div class="card text-center program">
            <div class="card-header">
                {{ program.category.name }}
            </div>
            <div class="card-body">
                <h5 class="card-title">{{ program.title }}</h5>
                <p class="card-text">{{ program.synopsis }}</p>
                <a href="{{ path("program_show", { id: program.id }) }}" class="btn btn-primary">Voir la fiche</a>
            </div>
            <div class="card-footer text-muted">
                {{ program.year }}
            </div>
        </div>


{#        <div>#}
